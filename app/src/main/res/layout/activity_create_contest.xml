<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tournament.CreateContest">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/uploadimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars[7]" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="79dp"
            android:text="Start Date" />

        <EditText
            android:id="@+id/startdate"
            android:layout_width="369dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="106dp"
            android:layout_height="46dp"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:text="EndDate" />

        <EditText
            android:id="@+id/enddate"
            android:layout_width="369dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="date" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="114dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:text="Start Time" />

        <EditText
            android:id="@+id/starttime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="114dp"
            android:layout_height="52dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:text="End Time" />

        <EditText
            android:id="@+id/endtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="142dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            android:text="Name of Tournamnet" />

        <EditText
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="142dp" />

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/textView7"
            android:layout_width="138dp"
            android:layout_height="46dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true"
            android:text="Entry Fees" />
        <EditText
            android:id="@+id/fees"
            android:layout_width="200dp"
            android:layout_height="142dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
            android:id="@+id/textView8"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView7"
            android:layout_alignParentStart="true"
            android:text="Winning price" />
        <EditText
            android:id="@+id/winningprice"
            android:layout_width="200dp"
            android:layout_height="142dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <TextView
            android:id="@+id/textView9"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView8"
            android:layout_alignParentStart="true"
            android:text="Game Name" />

        <EditText
            android:id="@+id/gamename"
            android:layout_width="200dp"
            android:layout_height="142dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <TextView
            android:id="@+id/textView10"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView9"
            android:layout_alignParentStart="true"
            android:text="Game Type" />
        <EditText
            android:layout_width="200dp"
            android:layout_height="142dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    <TextView
            android:id="@+id/textView11"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:text="Coordinator Name" />

        <EditText
            android:id="@+id/coordinatorname"
            android:layout_width="200dp"
            android:layout_height="142dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <TextView
            android:id="@+id/textView12"
            android:layout_width="175dp"
            android:layout_height="44dp"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:text="Coordinator Contact no." />

        <EditText
            android:id="@+id/contactno"
            android:layout_width="200dp"
            android:layout_height="142dp" />

    </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/createcontest"
            android:text="create contest"
            android:gravity="center"/>




    </LinearLayout>


</ScrollView>