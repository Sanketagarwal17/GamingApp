<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Register.Register"
  android:background="@color/colorPrimaryDark"
  >

  <com.google.android.material.chip.Chip
    app:chipBackgroundColor="@color/colorAccent"
    android:id="@+id/registerphone"
    android:layout_width="220dp"
    android:layout_height="40dp"
    android:textAlignment="center"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/registerfees"
    android:textColor="@android:color/white"
    android:text="TextView"
    />

  <com.google.android.material.chip.Chip
    android:id="@+id/registerfees"
    android:layout_width="131dp"
    android:layout_height="40dp"
    android:textAlignment="center"
    android:layout_above="@+id/til1"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="8dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="51dp"
    android:text="TextView"
    android:textColor="@android:color/white"
    app:chipBackgroundColor="@color/colorAccent" />

  <com.google.android.material.textfield.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/FormsTextInputStyle"
    android:id="@+id/til1"
    app:hintEnabled="false"
    android:paddingBottom="4dp"
    android:layout_centerInParent="true">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/registerusername"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ems="12"
      android:hint="Your pubg username"
      android:inputType="textPersonName"
      />
  </com.google.android.material.textfield.TextInputLayout>


  <Button
    android:id="@+id/register"
    android:layout_width="288dp"
    android:layout_height="74dp"
    android:layout_below="@+id/til1"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="8dp"
    android:layout_marginTop="34dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="64dp"
    android:text="Submit" />

</RelativeLayout>